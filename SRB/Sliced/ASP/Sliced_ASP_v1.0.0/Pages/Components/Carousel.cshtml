@page
@model Sliced.Pages.Components.CarouselModel
@{
    // This block allows server-side C# code execution for dynamic content and logic.

    ViewData["HeadTitle"] = "Components";
    ViewData["ChildTitle"] = "Carousel";
    ViewData["x-data"] = "components";
    ViewBag.ActiveItem = "carousel";
}
<!-- Swiper Css -->
<link rel="stylesheet" href="~/css/swiper-bundle.min.css" />

<!-- Start All Card -->
<div class="flex flex-col gap-4 min-h-[calc(100vh-212px)]">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white border border-black/10 p-5 rounded dark:bg-darklight dark:border-darkborder">
            <h2 class="text-base font-semibold text-black dark:text-white/80 mb-4 capitalize">Basic Carousel</h2>
            <div class="swiper SwiperDefault">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"><img src="~/images/images-1.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-2.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-3.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-4.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-5.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                </div>
            </div>
        </div>
        <div class="bg-white border border-black/10 p-5 rounded dark:bg-darklight dark:border-darkborder">
            <h2 class="text-base font-semibold text-black dark:text-white/80 mb-4 capitalize">Basic Carousel With Arrow</h2>
            <div class="swiper SwiperwithArrows">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"><img src="~/images/images-6.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-7.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-2.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-4.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-5.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                </div>
                <div class="swiper-button-next text-white"></div>
                <div class="swiper-button-prev text-white"></div>
            </div>
        </div>
        <div class="bg-white border border-black/10 p-5 rounded dark:bg-darklight dark:border-darkborder">
            <h2 class="text-base font-semibold text-black dark:text-white/80 mb-4 capitalize">Basic Carousel With pagination</h2>
            <div class="swiper SwiperwithPagination">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"><img src="~/images/images-5.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-4.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-2.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-6.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-7.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="bg-white border border-black/10 p-5 rounded dark:bg-darklight dark:border-darkborder">
            <h2 class="text-base font-semibold text-black dark:text-white/80 mb-4 capitalize">Basic Carousel With progress</h2>
            <div class="swiper SwiperwithProgress">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"><img src="~/images/images-4.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-3.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-2.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-6.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-7.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                </div>
                <div class="swiper-button-next text-white"></div>
                <div class="swiper-button-prev text-white"></div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="bg-white border border-black/10 p-5 rounded dark:bg-darklight dark:border-darkborder">
            <h2 class="text-base font-semibold text-black dark:text-white/80 mb-4 capitalize">Basic Carousel With Multiple slides</h2>
            <div class="swiper SwiperMultiple">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"><img src="~/images/images-7.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-6.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-2.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-4.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                    <div class="swiper-slide"><img src="~/images/images-3.jpg" alt="slider" class="max-h-96 w-full object-cover" /></div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</div>
<!-- End All Card -->
<!-- Swiper Slider Js -->
<script src="~/js/swiper-bundle.min.js"></script>

<script>
    var swiper = new Swiper(".SwiperDefault", {});
    var swiper = new Swiper(".SwiperwithArrows", {
        loop: true,
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });
    var swiper = new Swiper(".SwiperwithPagination", {
        pagination: {
            el: ".swiper-pagination",
        },
    });
    var swiper = new Swiper(".SwiperwithProgress", {
        pagination: {
            el: ".swiper-pagination",
            type: "progressbar",
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });
    var swiper = new Swiper(".SwiperMultiple", {
        slidesPerView: 1,
        spaceBetween: 30,
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },

        breakpoints: {
            768: {
                slidesPerView: 2,
                spaceBetween: 30
            }
        }
    });
</script>
